<% modifiers ||= "" %>
<% heading ||= "" %>
<% copy ||= "" %>

<section class="navigation navigation--leadership <%= modifiers %>">

  <div class="navigation__content">
    <h4 class="navigation__heading">
      <%= heading %>
    </h4>

    <div class="navigation__copy">
      <%= copy %>
    </div>
  </div>

  <div class="navigation__inner">
    <ul class="navigation__list">
      <div class="navigation__row">
        <% data.menus.leadership.each_with_index do | menu, index | %>
        <li class="navigation__item">
          <a class="navigation__link" href="<%= menu.link %>"><span class="navigation__copy"><%= menu.title %></span></a>
        </li>
        <% end %>
      </div>
    </ul>
  </div>
</section>
