<% modifiers ||= '' %>
<% map_url ||= '' %>
<% heading ||= '' %>
<% address ||= '' %>
<% copy ||= '' %>
<% contact ||= '' %>
<% image ||= "http://lorempixel.com/250/400/business/#{(1..10).to_a.sample}" %>

<section class="location <%= modifiers %>">

  <iframe class="location__map" width='100%' height='500px' frameBorder='0' src='<%= map_url %>'></iframe>

  <div class="location__image" style="background-image:url('<%= image %>');"></div>

  <div class="location__content">
    <h5 class="location__heading"><%= heading %></h5>
    <div class="location__copy">
      <p>
      <%= copy %>
      </p>
    </div>
  </div>

</section>
